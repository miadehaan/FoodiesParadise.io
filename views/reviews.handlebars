<main id="showAllReviews">
    <div class="container">
        <div class="row">
            {{!-- move content to the right --}}
            <div class="col-sm-2"></div>

            {{!-- Main content --}}
            <div class="col-sm-10 col-12">
                {{!-- Sidebar toggle button --}}
                <div class="row toggleButton">
                    <div class="col-10"></div>
                    <div class="col-2">
                        <button type="button" id="sidebarCollapse" class="btn btn-info">
                            <span><i class="fas fa-search"></i></span>
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-8 col-8"></div>
                    <button class="col-sm-2 col-4 btn btn-dark backBtn" type="button">Go Back</button>
                    <div class="col-sm-2"></div>
                </div>

                <div class="row">
                    <section class="col-sm-10 col-12">
                        <h2>Dish Reviews</h2>
                        <hr>

                        {{!-- Each dish review is displayed here: --}}
                        <div class="form-group"> 
                            {{#if dishReviews}}
                            {{#each dishReviews}}
                            <div>
                                <ul>
                                    <li class="singleReview">
                                        <div class="container">
                                        <div class="row">
                                            <h3 class="col-6">Dish: {{name}}</h3>

                                            <div class="col-6">
                                                {{#each reviews}}
                                                <p>
                                                    Rating: {{rating}}/5
                                                    <br>
                                                    Comments: {{comments}}
                                                    <br>
                                                    {{/each}}
                                                </p>
                                            </div>

                                        </div>
                                        </div>

                                    </li>
                                    {{/each}}
                                </ul>

                                {{else}}
                                <h3> No dish reviews yet </h3>
                                {{/if}}
                            </div>
                        </div>

                    </section> 
                </div>

            </div>

        </div>
    </div>
</main>